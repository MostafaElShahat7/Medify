{
  "info": {
    "name": "Medify API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Doctor",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.environment.set('token', pm.response.json().token);",
                  "    pm.environment.set('doctorId', pm.response.json().user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Dr. John Doe",
                "email": "doctor@example.com",
                "username": "dr.johndoe",
                "password": "password123",
                "role": "doctor",
                "gender": "male",
                "nationality": "American",
                "clinicName": "Health Plus Clinic",
                "clinicAddress": "123 Medical St",
                "specialization": "Cardiology",
                "experienceYears": 10
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Register Patient",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    pm.environment.set('token', pm.response.json().token);",
                  "    pm.environment.set('patientId', pm.response.json().user.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/register",
            "body": {
              "mode": "raw",
              "raw": {
                "name": "Jane Smith",
                "email": "patient@example.com",
                "username": "janesmith",
                "password": "password123",
                "role": "patient",
                "gender": "male",
                "dateOfBirth": "1990-01-01",
                "bloodType": "A_POSITIVE",
                "height": 170,
                "weight": 65,
                "chronicCondition": "None",
                "diabetes": false,
                "heartRate": 75
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseData = pm.response.json();",
                  "    pm.environment.set('token', responseData.token);",
                  "    ",
                  "    // Save user ID based on role",
                  "    if (responseData.user.role === 'doctor') {",
                  "        pm.environment.set('doctorId', responseData.user.id);",
                  "    } else if (responseData.user.role === 'patient') {",
                  "        pm.environment.set('patientId', responseData.user.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/login",
            "body": {
              "mode": "raw",
              "raw": {
                "email": "doctor@example.com",
                "password": "password123",
                "role": "doctor"
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Request Password Reset",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/request-reset-password",
            "body": {
              "mode": "raw",
              "raw": {
                "email": "user@example.com",
                "role": "doctor"
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/auth/reset-password",
            "body": {
              "mode": "raw",
              "raw": {
                "token": "{{resetToken}}",
                "newPassword": "newpassword123"
              },
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            }
          }
        }
      ]
    },
